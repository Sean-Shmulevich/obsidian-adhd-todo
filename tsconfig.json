{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["DOM", "ES2022"],
    "types": ["node", "svelte"],
    "baseUrl": "."
  },
  "include": ["**/*.ts", "**/*.svelte"],
  "exclude": ["node_modules"]
}
